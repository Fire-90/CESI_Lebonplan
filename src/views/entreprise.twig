{% extends "base.twig" %}

{% block title %}Liste des Entreprises - Lebonplan{% endblock %}

{% block content %}
    <section>
        <h1 class="center">Liste des Entreprises</h1>

        <div class="center">
            <!-- Lien vers la page d'ajout d'entreprise -->
            <a href="{{ path('ajouter-entreprise') }}" class="btn-add">➕ Ajouter une entreprise</a>
        </div>

        <div class="entreprises-container">
            {% for entreprise in entreprises %}
                <div class="entreprise-card">
                    <h2>{{ entreprise.nom }}</h2>
                    <p><strong>Secteur :</strong> {{ entreprise.secteur }}</p>
                    <p><strong>Ville :</strong> {{ entreprise.ville }}</p>
                    <div class="actions">
                        <!-- Lien vers la page de modification d'entreprise -->
                        <a href="{{ path('modifier-entreprise', { 'id': entreprise.id }) }}" class="btn-edit">✏️ Modifier</a>
                        <!-- Lien vers la page de suppression d'entreprise -->
                        <a href="{{ path('supprimer-entreprise', { 'id': entreprise.id }) }}" class="btn-delete">🗑️ Supprimer</a>
                    </div>
                </div>
            {% else %}
                <p class="no-data">Aucune entreprise enregistrée.</p>
            {% endfor %}
        </div>
    </section>
{% endblock %}
