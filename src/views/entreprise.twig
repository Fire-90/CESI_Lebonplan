{% extends "base.twig" %}

{% block title %}Liste des Entreprises - Lebonplan{% endblock %}

{% block content %}
    <h1 class="center">Liste des Entreprises</h1>

    <a href="{{ path('ajout-entreprise') }}" class="btn-add">➕ Ajouter une entreprise</a>
    <style>
    
</style>
    <div class="table-container">
        <table class="table-entreprises">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Secteur</th>
                    <th>Ville</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% if entreprises is empty %}
                    <tr>
                        <td colspan="5" class="no-data">Aucune entreprise enregistrée.</td>
                    </tr>
                {% else %}
                    {% for entreprise in entreprises %}
                        <tr>
                            <td>{{ entreprise.nom }}</td>
                            <td>{{ entreprise.secteur }}</td>
                            <td>{{ entreprise.ville }}</td>
                            <td class="action-links">
                                <a href="{{ path('modifier-entreprise') ~ '?id=' ~ entreprise.id }}" class="btn-edit">✏️ Modifier</a>
                                <a href="{{ path('supprimer-entreprise') ~ '?id=' ~ entreprise.id }}" class="btn-delete" onclick="return confirm('Voulez-vous supprimer cette entreprise ?');">🗑️ Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
            </tbody>
        </table>
    </div>
    <div class="pagination">
    {% if currentPage > 1 %}
        <a href="?page=entreprises&pagination={{ currentPage - 1 }}">Précédent</a>
    {% endif %}

    <span>Page {{ currentPage }} / {{ totalPages }}</span>

    {% if currentPage < totalPages %}
        <a href="?page=entreprises&pagination={{ currentPage + 1 }}">Suivant</a>
    {% endif %}
</div>

{% endblock %}
