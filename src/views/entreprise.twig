{% extends "base.twig" %}

{% block title %}Liste des Entreprises - Lebonplan{% endblock %}

{% block content %}
    <h1>Liste des Entreprises</h1>

    <a href="{{ path('ajout-entreprise') }}" class="btn-add">➕ Ajouter une entreprise</a>

    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Secteur</th>
                <th>Ville</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% if entreprises is empty %}
                <tr>
                    <td colspan="5">Aucune entreprise enregistrée.</td>
                </tr>
            {% else %}
                {% for entreprise in entreprises %}
                    <tr>
                        <td>{{ entreprise.id }}</td>
                        <td>{{ entreprise.nom }}</td>
                        <td>{{ entreprise.secteur }}</td>
                        <td>{{ entreprise.ville }}</td>
                        <td>
                            <a href="{{ path('modifier-entreprise') ~ '?id=' ~ entreprise.id }}">✏️ Modifier</a>
                            <a href="{{ path('supprimer-entreprise') ~ '?id=' ~ entreprise.id }}" onclick="return confirm('Voulez-vous supprimer cette entreprise ?');">🗑️ Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            {% endif %}
        </tbody>
    </table>
{% endblock %}
