{% extends "base.twig" %}

{% block title %}Liste des Entreprises - Lebonplan{% endblock %}

{% block content %}
    <h1 class="center">Liste des Entreprises</h1>

    {% if permLVL == 2 %}<a href="{{ path('ajout-entreprise') }}" class="btn-add">‚ûï Ajouter une entreprise</a>{% endif %}

    {% if permLVL in [0, 2] %}
        <div class="table-container">
            <table class="table-entreprises">
                <thead>
                    <tr>
                        <th>Nom</th>
                        {% if permLVL == 2 %}<th>Email</th>{% endif %}
                        <th>Secteur</th>
                        <th>Ville</th>
                        <th>Evaluation</th>
                        {% if permLVL == 2 %}<th>Actions</th>{% endif %}
                    </tr>
                </thead>
                <tbody>
                    {% if entreprises is empty %}
                        <tr>
                            <td colspan="{{ permLVL == 2 ? 5 : 4 }}" class="no-data">Aucune entreprise enregistr√©e.</td>
                        </tr>
                    {% else %}
                        {% for entreprise in entreprises %}
                            <tr>
                                <td>{{ entreprise.NameCompany }}</td>
                                {% if permLVL == 2 %}<th>{{entreprise.EmailCompany}}</th>{% endif %}
                                <td>{{ entreprise.Sector }}</td>
                                <td>{{ entreprise.City }}</td>
                                <td>
                                    {% for i in 1..5 %}
                                        {{ i <= entreprise.Evaluation ? '‚≠ê' : '‚òÜ' }}
                                    {% endfor %}
                                    ({{ entreprise.Evaluation }}/5)
                                </td>
                                {% if permLVL == 2 %}
                                    <td class="action-links">
                                        <a href="{{ path('edit-entreprise') }}&id={{ entreprise.idCompany }}" class="btn-edit">‚úèÔ∏è Modifier</a>
                                        <a href="{{ path('delete-entreprise') }}&id={{ entreprise.idCompany }}" class="btn-delete">üóëÔ∏è Supprimer</a>
                                    </td>
                                {% endif %}
                            </tr>
                        {% endfor %}
                    {% endif %}
                </tbody>
            </table>
        </div>
    {% endif %}

    <div class="pagination">
        {% if currentPage > 1 %}
            <a href="?page=entreprises&pagination=1" class="btn-first">D√©but</a>
            <a href="?page=entreprises&pagination={{ currentPage - 1 }}">Pr√©c√©dent</a>
        {% endif %}

        <span>Page {{ currentPage }} / {{ totalPages }}</span>

        {% if currentPage < totalPages %}
            <a href="?page=entreprises&pagination={{ currentPage + 1 }}">Suivant</a>
            <a href="?page=entreprises&pagination={{ totalPages }}" class="btn-last">Fin</a>
        {% endif %}
    </div>

{% endblock %}
