{% extends "base.twig" %}

{% block title %}Liste des Entreprises - Lebonplan{% endblock %}

{% block content %}
    <h1 class="center">Liste des Entreprises</h1>

    <a href="{{ path('ajout-entreprise') }}" class="btn-add">➕ Ajouter une entreprise</a>

    <div class="table-container">
        <table class="table-entreprises">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Secteur</th>
                    <th>Ville</th>
                    <th>Actions</th>
                    <th>Evaluation</th>
                </tr>
            </thead>
            <tbody>
                {% if entreprises is empty %}
                    <tr>
                        <td colspan="4" class="no-data">Aucune entreprise enregistrée.</td>
                    </tr>
                {% else %}
                    {% for entreprise in entreprises %}
                        <tr>
                            <td>{{ entreprise.NameCompany }}</td>
                            <td>{{ entreprise.Sector }}</td>
                            <td>{{ entreprise.City }}</td>
                            <td>{{ entreprise.Evaluation }}</td>
                            <td class="action-links">
                                <a href="{{ path('edit-entreprise') }}&id={{ entreprise.idCompany }}" class="btn-edit">✏️ Modifier</a>
                                <a href="{{ path('delete-entreprise') }}&id={{ entreprise.idCompany }}" class="btn-delete">🗑️ Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
            </tbody>
        </table>
    </div>

    <div class="pagination">
        {% if currentPage > 1 %}
            <a href="?page=entreprises&pagination={{ currentPage - 1 }}">Précédent</a>
        {% endif %}

        <span>Page {{ currentPage }} / {{ totalPages }}</span>

        {% if currentPage < totalPages %}
            <a href="?page=entreprises&pagination={{ currentPage + 1 }}">Suivant</a>
        {% endif %}
    </div>
{% endblock %}
