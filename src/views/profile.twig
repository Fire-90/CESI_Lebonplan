{% extends "base.twig" %}

{% block title %}Mon Profil - Lebonplan{% endblock %}

{% block content %}
    <h1 class="center title">Mon Profil</h1>
    
    {% if successMessage %}
        <div class="alert alert-success">{{ successMessage }}</div>
    {% endif %}
    {% if errorMessage %}
        <div class="alert alert-danger">{{ errorMessage }}</div>
    {% endif %}

    <div class="offers">
        <div class="offer hoverable">
            {% if user %}
                {% if not isEditing %}
                    {# Mode visualisation #}
                    <div class="profile-view">
                        <h2 class="title">Informations du compte</h2>
                        <p><strong>Nom :</strong> {{ user.name }}</p>
                        <p><strong>Rôle :</strong> 
                            {% if permLVL == 0 %}
                                Utilisateur standard
                            {% elseif permLVL == 1 %}
                                Pilote Élève
                            {% else %}
                                Administrateur
                            {% endif %}
                        </p>

                        <h2 class="title" style="margin-top: 20px;">Coordonnées</h2>
                        <p><strong>Email :</strong> {{ user.email }}</p>
                        <p><strong>Téléphone :</strong> 
                            {% if user.phone %}
                                {{ user.phone }}
                            {% else %}
                                Non renseigné
                            {% endif %}
                        </p>

                        <button onclick="location.href='index.php?page=profile&edit=true'" class="btn btn-primary">
                            Modifier mon profil
                        </button>
                    </div>
                {% else %}
                    {# Mode édition #}
                    <div class="profile-edit">
                        <h2 class="title">Modifier mon profil</h2>
                        <form method="post" action="index.php?page=profile&action=update">
                            <div class="form-group">
                                <label><strong>Nom :</strong></label>
                                <input type="text" name="name" value="{{ user.name }}" class="form-control" required>
                            </div>
                            
                            <p><strong>Rôle :</strong> 
                                {% if permLVL == 0 %}
                                    Utilisateur standard
                                {% elseif permLVL == 1 %}
                                    Pilote Élève
                                {% else %}
                                    Administrateur
                                {% endif %}
                            </p>

                            <h2 class="title" style="margin-top: 20px;">Coordonnées</h2>
                            <div class="form-group">
                                <label><strong>Email :</strong></label>
                                <input type="email" name="email" value="{{ user.email }}" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label><strong>Téléphone :</strong></label>
                                <input type="text" name="phone" value="{{ user.phone }}" class="form-control">
                            </div>

                            <h2 class="title" style="margin-top: 20px;">Changer le mot de passe</h2>
                            <div class="form-group">
                                <label>Mot de passe actuel :</label>
                                <input type="password" name="current_password" required class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Nouveau mot de passe :</label>
                                <input type="password" name="new_password" class="form-control">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Enregistrer</button>
                                <a href="{{ path('profile') }}" class="btn btn-secondary">Annuler</a>
                            </div>
                        </form>
                    </div>
                {% endif %}

                <hr>
                
                <h2 class="title text-danger">Zone dangereuse</h2>
                <button class="btn btn-danger" onclick="confirmDelete()">Supprimer mon compte</button>
                
                <form id="deleteForm" method="post" action="index.php?page=profile&action=delete" style="display: none;">
                    <div class="form-group">
                        <label>Confirmez votre mot de passe pour supprimer le compte :</label>
                        <input type="password" name="password" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-danger">Confirmer la suppression</button>
                </form>

                <script>
                    function confirmDelete() {
                        if (confirm('Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible.')) {
                            document.getElementById('deleteForm').style.display = 'block';
                        }
                    }
                </script>

            {% else %}
                <p>Vous n'êtes pas connecté.</p>
                <a href="{{ path('login') }}">Se connecter</a>
            {% endif %}
        </div>
    </div>
{% endblock %}