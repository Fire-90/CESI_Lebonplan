{% extends "base.twig" %}

{% block content %}
<div class="containerrr">
    <h1 class="card-title-h2">Confirmer la suppression</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">{{ offer.NameOffer }}</h5>
            <p class="card-text">{{ offer.DescOffer }}</p>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Rémunération: {{ offer.RemunOffer }} €</li>
                <li class="list-group-item">Date: {{ offer.DateOffer|date('d/m/Y') }}</li>
            </ul>
        </div>
    </div>

    <form method="POST" action="?page=delete-offer&id={{ offer.idOffer }}" class="mt-4">
        <input type="hidden" name="id" value="{{ offer.idOffer }}">
        
        <button type="submit" class="btn-delete-magic mr-2">
            <i class="fas fa-trash-alt"></i> Confirmer
        </button>

        <a href="?page=offres" class="btn btn-secondary">
            <i class="fas fa-times"></i> Annuler
        </a>
    </form>
</div>
{% endblock %}
