{% extends "base.twig" %}

{% block title %}Ajouter une entreprise - Lebonplan{% endblock %}

{% block content %}
    <section>
        <h1 class="center">Ajouter une entreprise</h1>

        <form method="POST" action="/ajouter-entreprise">
            <label for="nom">Nom de l'entreprise :</label>
            <input type="text" id="nom" name="nom" required>

            <label for="secteur">Secteur :</label>
            <input type="text" id="secteur" name="secteur" required>

            <label for="ville">Ville :</label>
            <input type="text" id="ville" name="ville" required>

            <button type="submit">Ajouter l'entreprise</button>
        </form>
    </section>
{% endblock %}
